{
    "manifest_version": 2,
    "name": "Drawing Extension",
    "version": "1.0",
    "description": "An extension to draw on the screen",
    "permissions": [
      "activeTab",
      "runtime"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    }
  }
  